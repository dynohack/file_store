<?xml version="1.0" encoding="UTF-8"?>

    <!--
    The following example binding requires that both "r" and "l"
    be pressed at the same time on the monitored gamepad in order to
    send a HOME keypress to the OS.

    <binding output-key="home">
        <input button="r" />
        <input button="l" />
    </binding>

    All valid keybindings: https://github.com/jaburns/NintendoSpy/blob/master/Keybindings.cs#L110
    View that project's default skins for button syntax.
    -->


<keybindings>
    <binding output-key="F13">
        <input button="up" />
    </binding>
    <binding output-key="F14">
        <input button="down" />
    </binding>
    <binding output-key="F15">
        <input button="left" />
    </binding>
    <binding output-key="F16">
        <input button="right" />
    </binding>
</keybindings>
